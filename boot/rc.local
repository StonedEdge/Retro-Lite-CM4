#!/bin/sh -e
#
# rc.local
#
# This script is executed at the end of each multiuser runlevel.
# Make sure that the script will "exit 0" on success or any other
# value on error.
#
# In order to enable or disable this script just change the execution
# bits.
#
# By default this script does nothing.

# Print the IP address
_IP=$(hostname -I) || true
if [ "$_IP" ]; then
  printf "My IP address is %s\n" "$_IP"
fi

sudo python3 /home/pi/splash_statistics.py &

# Reseet USB subsystem for proper hub enumeration 
sudo sh -c 'echo 0 > /sys/bus/usb/devices/usb1/authorized'
sudo sh -c 'echo 1 > /sys/bus/usb/devices/usb1/authorized'

cd /home/pi/RetroliteOSD
sudo ./retrolite &
sudo ./hdmi_switch.sh & 

exit 0
